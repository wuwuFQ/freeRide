/* pages/minePubCar/minePubCar.wxss */


.carList {
  display: flex;
  flex-direction: column;
  align-items: center;
  }
  
  .carItem {
    /* 上右下左 */
    margin: 20rpx 10rpx ;
    padding: 20rpx 20rpx;
    width: 80%;
    background-color: white;
    box-shadow: 2px 2px 2px 2px rgb(245, 244, 228); /*for Android*/
    -webkit-box-shadow: 2px 2px 10px 3px rgb(231, 229, 203); /*for IOS*/
    border-radius: 10rpx;
  
  }
  
  .topView {
    display: flex;
    justify-content: space-between;
  }
  .cityView {
    font-size: 36rpx;
  }
  .cityDetail {
    font-size: 24rpx;
    color: #666;
  }
  .timeView {
    font-size: 26rpx;
    text-align: center;
  }
  
  .numPeople {
    margin-top: 20rpx;
    margin-bottom: 5rpx;
    font-size: 34rpx;
    color: #ee0a24;
  }
  .buttonView {
    display: flex;
    justify-content: space-between;
    margin: 30rpx 60rpx 10rpx 60rpx;

  }